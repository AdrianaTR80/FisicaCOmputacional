cout<<"Calificacion de participacion"<<endl; 
cin>>participacion;

participacion=participacion*0.15;
tareas=tareas*0.15;

switch(cal) {
case 'A':  if(cal<8)
else{
cal=examen*0.7+participacion+tareas;
}
 cout<<"Tu calificacion final es:"<<<<endl
cin>>cal; break;

case 'B': if (cal=>8 and tareas=0 and participacion=0)
else {
cal=examen;
}
 cout<<"Tu calificacion final es:"<<endl;
cin>>examen;break;

case 'C' : if(cal=>8 and tareas>0)
else{
cal=examen*0.85 + tareas;
}
 cout<<"Tu calificacion final es:"<<endl;
cin>>cal; break;

case 'D' : if (cal=>8 and participacion>0)

return 0;
}
}

